<div class="p-3">
  <div class="row mb-3">
    <%= link_to "Back", :back, class: "btn btn-primary btn-sm" %>
  </div>
  <div class="row mb-3">
    <h3>User Profile</h3>
  </div>
  <div class="row mb-3">
    <div class="card card-header col-md-9 mt-4">
      <div class="row"><div class="col-md-3">Name: </div><div class="col-md-5"><%= @friend.full_name %></div></div>
      <div class="row"><div class="col-md-3">Email: </div><div class="col-md-5"><%= @friend.email %></div></div>
      <div class="row"><div class="col-md-3">Member since: </div><div class="col-md-5"><%= time_ago_in_words @friend.created_at%></div></div>
    </div>
  </div>
  <div class="row">
    <h2><%= @friend.first_name %>'s Portfolio</h2>
  </div>
  <%= render "user_stocks/friend_stocks" %>
</div>
